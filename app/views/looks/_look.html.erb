<div class="span4 look">	
	<%= link_to (image_tag look.image.url(:thumb)), look %>
	<h3>
		<%= link_to look.name, look %>
		<% if look.created_at >= Time.now - 1.day %>
			<span class="label success">New</span>
		<% end %>
	</h3>
	<% if look.age.blank? || look.age.length==1 %>
		<p><%= look.city %></p>
	<% else %>
		<p><%= look.age %>, <%= look.city %></p>
	<% end %>
	<p><small>Комментариев: <%= look.comments.count %></small></p>
</div>
